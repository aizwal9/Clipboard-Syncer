{
    "manifest_version": 3,
    "name": "Clipboard Sync",
    "version": "1.0",
    "description": "Sync your clipboard across devices using a temporary token.",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "clipboardRead",
        "clipboardWrite",
        "storage",
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    }
}